@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/seller.png"  class="img-responsive" width="1600" />
            <div class="carousel-caption" role="option">
                <p>
                    Are you wish add a seller?
                    <br />
                    <a asp-area="" asp-controller="Sellers" asp-action="Index" class="btn btn-default">
                        Add sellers
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/departments.jpg"  class="img-responsive" width="1600" />
            <div class="carousel-caption" role="option">
                <p>
                    Are you wish add a department?
                    <br />
                    <a asp-area="" asp-controller="Departments" asp-action="Index" class="btn btn-default">
                        Add departments
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/sale.jpeg" class="img-responsive"  width="1600"/>
            <div class="carousel-caption" role="option">
                <p>
                    Are you wish add a sale?
                    <br />
                    <a asp-area="" asp-controller="SalesRecords" asp-action="Index" class="btn btn-default">
                        Add sale
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


